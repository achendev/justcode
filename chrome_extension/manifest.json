{
    "manifest_version": 3,
    "name": "JustCode Extension",
    "version": "2.0",
    "description": "Get project context and deploy code locally or via a server.",
    "permissions": [
        "storage",
        "clipboardWrite",
        "clipboardRead",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Up"
            },
            "description": "Open JustCode Popup"
        }
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "host_permissions": [
        "http://127.0.0.1:5010/",
        "http://0.0.0.0:5010/"
    ]
}