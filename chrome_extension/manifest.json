{
    "manifest_version": 3,
    "name": "JustCode",
    "version": "1.1",
    "description": "Get project context and deploy code locally or via a server.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "clipboardWrite",
        "clipboardRead",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "commands": {
        "get-context-shortcut": {
            "suggested_key": {
                "default": "Alt+Left",
                "mac": "Alt+Left"
            },
            "description": "Get context from the active profile"
        },
        "deploy-code-shortcut": {
            "suggested_key": {
                "default": "Alt+Right",
                "mac": "Alt+Right"
            },
            "description": "Deploy code using the active profile"
        },
        "undo-code-shortcut": {
            "suggested_key": {
                "default": "Alt+Comma",
                "mac": "Alt+Comma"
            },
            "description": "Undo the last deploy (Alt + <)"
        },
        "redo-code-shortcut": {
            "suggested_key": {
                "default": "Alt+Period",
                "mac": "Alt+Period"
            },
            "description": "Redo the last undo (Alt + >)"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "js/content_script/notification_dom.js",
                "js/content_script/notification_timer.js",
                "js/content_script/notification_manager.js",
                "js/content_script.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["css/notification.css"],
            "matches": ["<all_urls>"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "host_permissions": [
        "http://127.0.0.1:5010/",
        "http://0.0.0.0:5010/"
    ]
}