{
    "manifest_version": 3,
    "name": "JustCode",
    "version": "1.2",
    "description": "AI-powered pair programmer, right in your browser",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "clipboardWrite",
        "clipboardRead",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Up",
                "mac": "Alt+Up"
            }
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "js/content_script/notification_dom.js",
                "js/content_script/notification_timer.js",
                "js/content_script/notification_manager.js",
                "js/content_script.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "css/notification.css",
                "welcome/welcome.html",
                "welcome/welcome.css",
                "welcome/welcome.js",
                "icons/icon128.png"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "host_permissions": [
        "http://127.0.0.1:5010/",
        "http://0.0.0.0:5010/",
        "*://*.aistudio.google.com/*",
        "*://*.grok.com/*",
        "*://*.x.com/*",
        "*://*.perplexity.ai/*",
        "*://*.gemini.google.com/*",
        "*://*.chatgpt.com/*",
        "*://*.claude.ai/*"
    ]
}